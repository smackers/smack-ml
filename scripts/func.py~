#!/usr/bin/env python
import glob2
		
#create different types of files
def open_new_file(filename,mode):
	if mode == 1:
		f = open(filename,'r')	#read mode
	if mode == 2:
		f = open(filename,'w')	#write mode
	if mode == 3:
		f = open(filename,'a+')	#append mode
	return f


#parameter declarations
'''
 Replace .c with .xml to separate .xml files
'''
c_files = glob2.glob('../c/**/*.c')
t = input('Enter the # of files you want to open: ')
File = [0]*t


#opening the necessary files with appropriate file extension
for i in range(t):
	Name_File = raw_input('Enter the filename: ')
	Mode = input('1: Read only, 2: write only, 3: append mode : ')
	Ext = raw_input('Enter the file extension: ')
	NameFile = Name_File +'.'+Ext
	File[i] = open_new_file(NameFile,Mode)


#WRITING all the *.c filenames INTO THE selected FILE
if c_files != None:
	p = input('Enter which File # you want as input: ')
	for files in c_files:
		files = files[5:]
		File[p-1].write(files)
		File[p-1].write('\n')


#closing all the open files
for i in range(t):
	File[i].close()
